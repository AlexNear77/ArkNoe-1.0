<div class="row">

  <div class="col-lg-3">

    <img class="img-responsive" src="/img/icono.png" alt="" 
          width="77" 
          height="77"         
          style="display:block;margin:auto;">
          <br>
    <div id="list-example" class="list-group">
      <div class="card-header  bg-light"style="text-align: center; ">
    Categorias
    </div>
      <a class="list-group-item list-group-item-action" href="/categorias/equipoMedico">Equipo médico</a>
      <a class="list-group-item list-group-item-action" href="/categorias/medioDeContraste">Medio de contraste</a>
      <a class="list-group-item list-group-item-action" href="/categorias/materialRadiologico">Material radiológico</a>
      <a class="list-group-item list-group-item-action" href="/categorias/materialDeCuracion">Material de curación</a>
    </div>

  </div>
  <!-- /.col-lg-3 -->

  <div class="col-lg-9">

    <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
          <img class="d-block img-fluid"
            src="https://www.dynamoelectronics.com/wp-content/uploads/2020/04/equipo-medico-compressor-compressor.png" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block img-fluid mx-auto"
            src="https://1.bp.blogspot.com/-zrLSY193_C0/Tg0ukoBN94I/AAAAAAAAALY/5mqKU6FaKuU/w1200-h630-p-k-no-nu/mediodecontraste.jpg"
            alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block img-fluid mx-auto"
            src="https://e-duque.net/wp-content/uploads/2018/09/Radiologia-equipo-esquema-EPFL_e-w.jpg" alt="Third slide">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

    <h3 class="pt-2">Lo más destacado</h3>
    <hr>
    <div class="row">
      
      {{#each productos}}
      <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100">
          <a href="/productos/producto/{{_id}}"><img class="card-img-top"
              src="{{imageURL}}" alt=""></a>
          <div class="card-body">
            <h4 class="card-title">
              <a href="/productos/producto/{{_id}}">{{titulo}}</a>
            </h4>
            <h5 class="text-success">Disponible</h5>
            <p class="card-text">{{descripcion}}</p>
          </div>
          <div class="border text-center pb-0 pt-2">
            <p class="lead text-success">${{precio}}.00 <small class="text-primary">Por pieza</small></p>
          </div>
        </div>
      </div>
      {{/each}}

    </div>
    <!-- /.row -->

  </div>
  <!-- /.col-lg-9 -->

</div>
<!-- /.row -->